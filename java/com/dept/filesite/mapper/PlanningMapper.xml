<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dept.filesite.mapper.PlanningMapper">

    <resultMap id="BaseResultMap" type="com.dept.filesite.entity.Planning">
        <id column="id" property="id"/>
        <result column="brand" property="brand"></result>
        <result column="name" property="name" />
        <collection property="images" ofType="com.dept.filesite.entity.Image">
            <id column="o_id" property="id"></id>
            <result column="o_name" property="name"></result>
            <result column="o_path" property="path"></result>
        </collection>
    </resultMap>

    <insert id="insertPlanning" parameterType="com.dept.filesite.entity.Planning" useGeneratedKeys="true"
            keyProperty="id">
        insert into planning set name=#{name}, image_number=#{imageNumber},
    </insert>

    <select id="countTotal" parameterType="java.util.Map" resultType="java.lang.Integer">
        select count(*) from planning
        <where>
            <if test="planning != null">
                <if test="planning.name != null and planning.name != '' ">
                    name like CONCAT('%',#{planning.name}, '%')
                </if>
            </if>
        </where>
    </select>

    <select id="listPlanning" parameterType="java.util.Map" resultMap="BaseResultMap">
        select * from planning
        <where>
            <if test="planning != null">
                <if test="planning.name != null and planning.name != '' ">
                    and name like CONCAT('%',#{planning.name},'%')
                </if>
            </if>
        </where>
        order by id desc limit #{startIndex},#{pageSize}
    </select>

    <update id="updatePlanning" parameterType="com.dept.filesite.entity.Planning">
        update planning
        <set>
            <if test="name != null and name != '' ">
                name = #{name},
            </if>
            <if test="imageNumber != null and imageNumber != '' ">
                image_number = #{imageNumber}
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="deletePlanningById">
        delete from planning  where id in
        <foreach collection="aids" item="aid" open="(" close=")" separator=",">
            #{aid}
        </foreach>
    </delete>

    <select id="findPlanningById" resultMap="BaseResultMap">
        SELECT
            pq.id, pq.brand, pq.name, img.id AS oid, img.path AS opath, img.name AS oname
        FROM
            planning AS pq
            LEFT JOIN image_list img on pq.id = img.pid
            WHERE pq.id = #{id}
    </select>

    <select id="findPlanningByName" resultMap="BaseResultMap">
        select * from planning where file_name = #{fileName}
    </select>
</mapper>